@model NorthLion.Zero.Users.Dto.UpdateUserInput
@{
    Layout = null;
}

<form role="form" id="changePasswordForm">
    @Html.Hidden("UserId",Model.Id)
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModal-label">@L("ChangePasswordFor") @Model.Name @Model.Surname</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label">@L("Password")</label>
                    <input type="password" name="newPassword" class="form-control js-password">
                </div>
                <div class="form-group">
                    <label class="control-label">@L("PasswordConfirmation")</label>
                    <input type="password" name="newPasswordConfirmation" class="form-control js-confirm-password">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@L("Cancel")</button>
                <button type="submit" class="btn btn-primary">@L("Save")</button>
            </div>
        </div>
    </div>
</form>
<script src="//cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>

<script>
    SystemJS.import('Users/ChangePassword.js').then(function (d) {
        new d.ChangePasswordWindow().load();
    });
</script>